{
    "height": 30,
    "width": 95%,
    "layer": "top",
    "position": "top",
    "reload_style_on_change": 1,
    "mod": "dock",
    "exclusive": true,
    "passtrough": false,
    "gtk-layer-shell": true,
    "modules-left": ["custom/launcher", "hyprland/window"],
    "modules-middle": ["hyprland/workspaces"],
    "modules-right": ["network", "pulseaudio",  "backlight", "battery", "tray", "custom/lock", "clock", "custom/power-menu"],

    "hyprland/workspaces": {
      "active-only": false, 
      "all-outputs": true, 
      "disable-scroll": false, 
      "on-click": "activate",
      "on-scroll-up": "hyprctl dispatch workspace +1", 
      "on-scroll-down": "hyprctl dispatch workspace -1",
      "format": "{icon}",
      "format-icons": {
        "active": "Û∞ÆØ",
        "default": "Ôûü",
	"empty": "Ôûü"
      },
      "persistent-workspaces":{
        "1": [],
        "2": [],
        "3": [],
        "4": []
      }
    },

    "hyprland/window": {
      "format": "[] = {initialClass}",
      "separate-outputs": true
    },

    "tray": {
      "spacing": 10,
      "icon-size": 22,
      "show-passive-items": true
    },

    "backlight": {
      "device": "intel_backlight",
      "format": "{icon} {percent}%",
      "tooltip-format": "{percent}%",
      "format-icons": ["Û±©é","Û±©è","Û±©ê","Û±©ë","Û±©í","Û±©ì","Û±©î","Û±©ï","Û±©ñ","Û∞õ®"]
    },

    "network": {
      "format-wifi": "<span color=\"#1793d1\">Ô™®</span>",
      "format-ethernet": "<span color=\"#1793d1\">Ôõø</span>",
      "format-disconnected": "<span color=\"#f8f8f2\">Ô™©</span>",
      "tooltip-format": "{essid}",
      "on-click": "~/.config/rofi/launchers/network/irnm &",
      "format-icons": ["Û∞§Ø","Û∞§ü","Û∞§¢","Û∞§•","Û∞§®"]
    },

    "bluetooth": {
      "format": "<span color=\"#1793d\">Ôäî {status}</span>",
      "format-connected": "<span color=\"#1793d1\">Ôäî {device_alias}</span>",
      "format-connected-battery": "Ôäî {device_alias} {device_battery_percentage}%",
   // "format-device-preference": [ "device1",   "device2" ], // preference list deciding the displayed device
      "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
      "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
      "tooltip-format-enumerate-connected":"{device_alias}\t{device_address}",
      "tooltip-format-enumerate-connected-battery":"{device_alias}\t{device_address}\t{device_battery_percentage}%"
    },

    "pulseaudio": {
      "format": "<span color=\"#8be9fd\">{icon}</span>",
      "format-muted": "<span color=\"#f8f8f2\">Ô™Ä</span>",
      "format-icons": {
        "default": ["ÔÄ¶", "ÔÄß", "Ô©Ω"]
      },
      "on-click": "pavucontrol &"
    },

    "battery": {
      "bat": "BAT0",
      "adapter": "ADP0",
      "interval": 60,
      "states": {
	"good": 95,
        "warning": 30,
        "critical": 15
      },
      "max-length": 20,
      "format": "{icon} {percent}%",
      "format-warning": "<span color=\"#f1fa8c\">Û±Éå</span>",
      "format-critical": "<span color=\"#ff5555\">Û±Éç</span>",
      "format-charging": "<span color=\"#50fa7b\">ÔÉß</span>",
      "format-plugged": "<span color=\"#50fa7b\">Û∞ö•</span>", 

      "format-alt": "+{percent}%",
      "format-full": "<span color=\"#50fa7b\">Û∞ÇÑ</span>", 
      "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"]
    },

    "clock": {
      "interval": 1,
      "format": "Ôê∫  {:%H:%M}",
      "format-alt": "{:%A, %B %d, %Y %H:%M:%S ÔÅ≥} ",
      "tooltip-format": "<tt><small>{calendar}</small></tt>",
      "calendar": {
        "mode"          : "month",
        "weeks-pos"     : "right",
        "on-scroll"     : 1,
        "on-click-right": "mode",
        "format": {
          "months":     "<span color=\"#ffead3\"><b>{}</b></span>",
          "days":       "<span color=\"#ecc6d9\"><b>{}</b></span>",
          "weeks":      "<span color=\"#99ffdd\"><b>W{}</b></span>",
          "weekdays":   "<span color=\"#ffcc66\"><b>{}</b></span>",
          "today":      "<span color=\"#ff6699\"><b><u>{}</u></b></span>"
        },
	"actions":  {
          "on-click-right": "mode",
          "on-click-forward": "tz_up",
          "on-click-backward": "tz_down",
          "on-scroll-up": "shift_up",
          "on-scroll-down": "shift_down"
        }
      }      
    }, 

    "custom/notification": {
      "tooltip": true,
      "format": "{icon}",
      "format-icons": {
	"notification": "ÔÉ≥",
        "none": "ÔÇ¢",
        "dnd-notification": "Ôá∂",
        "dnd-none": "Ôá∑
      },
      "return-type": "json",
      "exec-if": "which swaync-client",
      "exec": "swaync-client -swb",
      "on-click": "swaync-client -t -sw",
      "on-click-right": "swaync-client -d -sw",
      "escape": true
    },

    "custom/lock": {
      "tooltip" : false,
      "on-click": "hyprlock",
      "format" : "<span color=\"#ff5555\">ÔÄ£</span>"
    },

    "custom/spotify": {
      "exec": "python3 ~/.config/waybar/scripts/mediaplayer.py --player spotify",
      "format": "<span color=\"#50fa7b\">ÔÜº {}</span>",
      "return-type": "json",
      "on-click": "playerctl play-pause --player spotify",
      "on-double-click-right": "playerctl next --player spotify",
      "on-scroll-down": "playerctl previous --player spotify"
    },

    "custom/power": {
      "format": "<span color=\"#f8f8f2\">üíÄ<span/>";,
      "on-click": "bash ~/.config/waybar/scripts/powermenu/powermenu.sh &",
    }, 

    "custom/launcher": {
      "format": "<span color=\"#1793d1\">ÔåÉ</span>",
      "on-click": "rofi -show drun -theme ~/.config/rofi/launchers/apps/launcher.rasi &"
    },

}
