{
    "height": 35,
    "width": 95%,
    "layer": "top",
    "position": "top",
    "reload_style_on_change": 1,
    "mod": "dock",
    "exclusive": true,
    "passtrough": false,
    "gtk-layer-shell": true,
    "modules-left": ["custom/launcher", "custom/weather", "hyprland/window"],
    "modules-middle": ["hyprland/workspaces"]
    "modules-right": ["network", "pulseaudio",  "backlight", "battery", "tray", "custom/lock", "clock", "custom/power-menu"],

    "hyprland/workspaces": {
      "active-only": false, 
      "all-outputs": true, 
      "disable-scroll": false, 
      "on-scroll-up": "hyprctl dispatch workspace -1", 
      "on-scroll-down": "hyprctl dispatch workspace +1",
      "format": "{icon}",
      "on-click": "activate",
      "format-icons": {
        "active": "Û∞ÆØ",
        "default": "Ôûü"
      },
      "persistent-workspaces":{
        "1": [
          "eDP-1"
        ],
        "2": [
          "eDP-1"
        ],
        "3": [
          "eDP-1"
        ],
        "4": [
          "eDP-1"
        ]
      },
    },
    "hyprland/window": {
      "format": "üëâ {}",
      "max-length": 200,
      "separate-outputs": true,
      "on-click-right": "sleep .3 && ~/.config/hypr/resize.sh",
      "on-click-middle": "hyprctl dispatch killactive"
    },
    "tray": {
      "spacing": 10,
      "icon-size": 22
    },
    "clock": {
      "interval": 1,
      "format": "Ôê∫  {:%H:%M}",
      "format-alt": "{:%A, %B %d, %Y %H:%M:%S ÔÅ≥} ",
      "tooltip-format": "<tt><small>{calendar}</small></tt>",
      "calendar": {
        "mode"          : "month",
        "weeks-pos"     : "right",
        "on-scroll"     : 1,
        "on-click-right": "mode",
        "format": {
          "months":     "<span color='#ffead3'><b>{}</b></span>",
          "days":       "<span color='#ecc6d9'><b>{}</b></span>",
          "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
          "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
          "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
        }
      },
      "actions":  {
        "on-click-right": "mode",
        "on-click-forward": "tz_up",
        "on-click-backward": "tz_down",
        "on-scroll-up": "shift_up",
        "on-scroll-down": "shift_down"
      }
    },

    "backlight": {
      "device": "eDP-1",
      "format": "{percent}% {icon}",
      "tooltip-format": "{percent}",
      "format-icons": ["Û±©é ", "Û±©è ", "Û±©ê ", "Û±©ë ", "Û±©í ", "Û±©ì ", "Û±©î ", "Û±©ï ", "Û±©ñ ", "Û∞õ® "]
    },
    "network": {
      /* "format-wifi": "Ô™®", */
      "format-wifi": "<span foreground=#1793d1">{icon}</span>",
      "format-ethernet": "<span foreground=#1793d1>Ôõø</span> ",
      "format-disconnected": "<span foreground=#f8f8f2>Ô™©</span>",
      "tooltip-format": "{essid}",
      "on-click": "~/.config/waybar/scripts/network/rofi-network-manager.sh",
      "format-icons": ["Û∞§Ø","Û∞§ü","Û∞§¢","Û∞§•","Û∞§®"],
    },
    "bluetooth": {
      "format": "<span foreground= #1793d1>Ôäî {status}</span>",
	    "format-connected": "<span foreground= #1793d1>Ôäî {device_alias}</span>",
	    "format-connected-battery": "Ôäî {device_alias} {device_battery_percentage}%",
	    // "format-device-preference": [ "device1",   "device2" ], // preference list deciding the displayed device
	    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
	    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
	    "tooltip-format-enumerate-connected":"{device_alias}\t{device_address}",
	    "tooltip-format-enumerate-connected-battery":"{device_alias}\t{device_address}\t{device_battery_percentage}%"
    },
    "pulseaudio": {
      "format": "<span foreground= #8be9fd>{icon}</span>",
      "format-muted": "<span foreground= #f8f8f2>Ô™Ä</span>",
      "format-icons": {
        "default": ["ÔÄ¶", "ÔÄß", "Ô©Ω"]
      },
      "on-click": "pavucontrol &"
    },
    "battery": {
      "bat": "BAT0",
      "adapter": "ADP0",
      "interval": 60,
      "states": {
        "warning": 30,
        "critical": 15
      },
      "max-length": 20,
      "format": "{icon} ",
      "format-warning": "<span foreground= #f1fa8c>{icon}</span>",
      "format-critical": "<span foreground= #ff5555>{icon9}</span>",
      "format-charging": "<span foreground=#50fa7b>ÔÉß</span>",
      "format-plugged": "<span foreground= #50fa7b>ÔÆ£</span>", 

      "format-alt": "{icon} {time}",
      "format-full": "<span foreground= #59fa7b>ÔÆ£</span>", 
      "format-icons": ["Û±ä°", "Û±ä¢", "Û±ä£"]
    },
    "custom/notification": {
		  "tooltip": true,
      "format": "{icon}",
      "format-icons": {
		    "notification": "ÔÉ≥",
        "none": "ÔÇ¢",
        "dnd-notification": "Ôá∂",
        "dnd-none": "Ôá∑
      },
		  "return-type": "json",
		  "exec-if": "which swaync-client",
		  "exec": "swaync-client -swb",
		  "on-click": "swaync-client -t -sw",
		  "on-click-right": "swaync-client -d -sw",
		  "escape": true
	  },
    "custom/weather": {
      "exec": "python3 ~/.config/waybar/scripts/weather.py",
      "restart-interval": 300,
      "return-type": "json"
    },   
    "custom/lock": {
      "tooltip" : false,
      "on-click": "swaylock",
      "format" : "<span foreground= #ff5555>ÔÄ£</span>"
    },
    "custom/spotify": {
      "exec": "python3 ~/.config/waybar/scripts/mediaplayer.py --player spotify",
      "format": "<span foreground=#50fa7b>ÔÜº {}</span>",
      "return-type": "json",
      "on-click": "playerctl play-pause",
      "on-double-click-right": "playerctl next",
      "on-scroll-down": "playerctl previous"
    },
    "custom/power-menu": {
      "format": "<span foreground=#f8f8f2>üíÄ<span/>";,
      "on-click": "bash ~/.config/waybar/scripts/power-menu/powermenu.sh &",
    }, 
    "custom/launcher": {
      "format": "<span foreground= ##1793d1>ÔåÉ</span>",
      "on-click": "rofi -show drun -theme /home/tk/.config/rofi/launchers/apps/launcher.rasi &"
    },
}
