#!/usr/bin/env bash

poll_speaker() {
    speaker=$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | rg -o "\d+%" | head -1)
    { wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle | rg no > /dev/null; } && silent=false || silent=true
}

echo_json() {
    echo "{ \"speaker\": { \"volume\": ${speaker::-1}, \"muted\": $silent } }"
}

# Output initial values
poll_speaker
echo_json

pactl subscribe | while read -r line; do
    [[ $line =~ sink ]] && poll_speaker

    echo_json
done
