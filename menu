	-pblock 'hyprlock' \
	-pbpoweroff 'systemctl poweroff' \
	-pbreboot 'systemctl reboot' \
	-pbsize 84 \
	-pbsleep 'hypridle' \
	-s "drawer.css" \
	-spacing 50 \
	-wm 'hyprctl dispatch exec "$@"'
